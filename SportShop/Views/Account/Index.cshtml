@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewBag.Title = "Użytkownicy";
    Layout = "_AdminLayout";
}

<div class="bg-primary m-1 p-1 text-white"><h4>Konta użytkowników</h4></div>
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Nazwa użytkownika</th><th>Email</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Brak użytkowników</td></tr>
    }
    else
    {
        foreach (var appUser in Model)
        {
            <tr>
                <td>@appUser.Id</td>
                <td>@appUser.UserName</td>
                <td>@appUser.Email</td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="Create">Dodaj użytkownika</a>
