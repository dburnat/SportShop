@model IEnumerable<AppUser>

@{
    ViewBag.Title = "Użytkownicy";
    Layout = "_AdminLayout";
}


<div clas="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Nazwa użytkownika</th><th>Email</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Brak użytkowników</td></tr>
    }
    else
    {
        foreach (var appUser in Model)
        {
            <tr>
                <td>@appUser.Id</td>
                <td>@appUser.UserName</td>
                <td>@appUser.Email</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@appUser.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@appUser.Id">Edytuj</a>
                        <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="Create">Dodaj użytkownika</a>
